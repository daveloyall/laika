begin
  require 'jeweler'
  Jeweler::Tasks.new do |gemspec|
    gemspec.name = "laika-medical-document"
    gemspec.summary = "A library for handling import/export/validation of xml medical documents according to various standards such as CCD and CCR"
    gemspec.description = "Import/export/validation to and from xml representations of medical documents based on standards such as CCD and CCR"
    gemspec.email = "jpartlow@opensourcery.com"
    gemspec.homepage = "http://github.com/opensourcery/laika-medical-document"
    gemspec.authors = ["Laika Project"]
    gemspec.executables = []
    gemspec.test_files = 'spec/**/*'
  end
rescue LoadError
  puts "Jeweler not available. Install it with: gem install jeweler"
end

require 'spec/rake/spectask'
Spec::Rake::SpecTask.new(:spec) do |spec|
  spec.libs << 'lib' << 'spec'
  spec.spec_files = FileList['spec/**/*_spec.rb']
end

Spec::Rake::SpecTask.new(:rcov) do |spec|
  spec.libs << 'lib' << 'spec'
  spec.pattern = 'spec/**/*_spec.rb'
  spec.rcov = true
end

task :spec => :check_dependencies

task :default => :spec

require 'rake/rdoctask'
Rake::RDocTask.new do |rdoc|
  version = File.exist?('VERSION') ? File.read('VERSION') : ""

  rdoc.rdoc_dir = 'rdoc'
  rdoc.title = "testing #{version}"
  rdoc.rdoc_files.include('README*')
  rdoc.rdoc_files.include('lib/**/*.rb')
end
